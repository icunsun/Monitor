<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <include layout="@layout/item_divider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/text_cur_margin"
        android:text="@string/str_cur_place"
        android:textColor="@color/color_text_color"
        android:textSize="@dimen/text_size"/>

    <TextView
        android:id="@+id/tv_cur_address"
        android:layout_width="@dimen/text_place_width"
        android:layout_height="@dimen/text_place_height"
        android:layout_marginBottom="@dimen/text_place_bottom_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/text_place_margin"
        android:background="@drawable/bg_address_blue"
        android:gravity="center"
        android:text="@string/str_cur_place"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_size"/>

    <include layout="@layout/item_divider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/text_cur_margin"
        android:text="@string/str_select_place"
        android:textColor="@color/color_text_color"
        android:textSize="@dimen/text_size"/>


</LinearLayout>