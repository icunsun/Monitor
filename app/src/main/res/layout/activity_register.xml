<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_title_height"
        android:background="#0F99E4"
        android:gravity="center"
        android:text="@string/str_register"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabIndicatorColor="#0F99E4"
        app:tabSelectedTextColor="#0F99E4"
        app:tabTextColor="#808080"></android.support.design.widget.TabLayout>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#bfbfbf">

    </View>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"></android.support.v4.view.ViewPager>

</LinearLayout>
